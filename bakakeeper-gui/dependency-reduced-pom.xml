<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>bakakeeper-parent</artifactId>
    <groupId>cz.zsstudanka.skola</groupId>
    <version>26.3.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>bakakeeper-gui</artifactId>
  <name>BakaKeeper GUI</name>
  <description>Grafické uživatelské rozhraní aplikace BakaKeeper.</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <classpathPrefix>lib/</classpathPrefix>
              <mainClass>${project.app.mainClass}</mainClass>
            </manifest>
            <manifestEntries>
              <Built-By>${user.name}</Built-By>
              <Build-Jdk>${java.version} (${java.vendor} ${java.vm.version})</Build-Jdk>
              <Build-Timestamp>${maven.build.timestamp}</Build-Timestamp>
              <Build-OS>${os.name} ${os.arch} ${os.version}</Build-OS>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>${project.app.mainClass}</mainClass>
                </transformer>
                <transformer />
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <finalName>BakaKeeper-GUI-${project.version}</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>jpackage</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>3.5.0</version>
            <executions>
              <execution>
                <id>jpackage-app-image</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>jpackage</executable>
                  <arguments>
                    <argument>--type</argument>
                    <argument>app-image</argument>
                    <argument>--input</argument>
                    <argument>${project.build.directory}</argument>
                    <argument>--main-jar</argument>
                    <argument>BakaKeeper-GUI-${project.version}.jar</argument>
                    <argument>--main-class</argument>
                    <argument>${project.app.mainClass}</argument>
                    <argument>--name</argument>
                    <argument>BakaKeeper</argument>
                    <argument>--app-version</argument>
                    <argument>${jpackage.app.version}</argument>
                    <argument>--vendor</argument>
                    <argument>ZŠ Studánka</argument>
                    <argument>--description</argument>
                    <argument>${project.description}</argument>
                    <argument>--copyright</argument>
                    <argument>Copyright © 2019–2026 ZŠ Studánka</argument>
                    <argument>--java-options</argument>
                    <argument>--enable-native-access=javafx.graphics</argument>
                    <argument>--icon</argument>
                    <argument>${project.basedir}/src/main/jpackage/BakaKeeper${jpackage.icon.ext}</argument>
                    <argument>--dest</argument>
                    <argument>${project.build.directory}/jpackage</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>jpackage-macos</id>
      <properties>
        <jpackage.icon.ext>.icns</jpackage.icon.ext>
      </properties>
    </profile>
    <profile>
      <id>jpackage-windows</id>
      <properties>
        <jpackage.icon.ext>.ico</jpackage.icon.ext>
      </properties>
    </profile>
    <profile>
      <id>jpackage-linux</id>
      <properties>
        <jpackage.icon.ext>.png</jpackage.icon.ext>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-controls</artifactId>
      <version>25</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-fxml</artifactId>
      <version>25</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.11.4</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit-jupiter-api</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-jupiter-params</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-jupiter-engine</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <jpackage.app.version>26.3.0</jpackage.app.version>
    <project.app.mainClass>cz.zsstudanka.skola.bakakeeper.gui.Launcher</project.app.mainClass>
  </properties>
</project>
